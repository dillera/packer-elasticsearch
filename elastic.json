{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "security_group_id": "",
    "aws_region": "ap-southeast-2",
    "aws_source_ami": "ami-abeb9e91",
    "aws_instance_type": "t2.medium",
    "ami_name_prefix": "elasticsearch",
    "elastic_version": "1.5.0"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "{{user `aws_instance_type`}}",
    "ssh_username": "ubuntu",
    "security_group_id": "{{user `security_group_id`}}",
    "ami_name": "{{user `ami_name_prefix`}}-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/default.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/java.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "config/elasticsearch/elasticsearch.yml",
      "destination": "/tmp/elasticsearch.yml"
    },
    {
      "type": "shell",
      "script": "scripts/elastic.sh",
      "environment_vars": [
            "ELASTIC_VERSION={{user `elastic_version`}}"
        ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type":"vagrant",
      "output": "boxes/packer_{{.BuildName}}_{{.Provider}}.box",
      "vagrantfile_template": "templates/VagrantFile.template"
    }
  ]
}
