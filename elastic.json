{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "ap-southeast-2",
    "aws_build_regions": "ap-southeast-2",
    "aws_source_ami": "ami-69631053",
    "aws_instance_type": "t2.medium",
    "ami_name_prefix": "elasticsearch",
    "elastic_version": "1.7.0",
    "aws_vpc_id": "",
    "aws_subnet_id": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "{{user `aws_instance_type`}}",
    "ssh_username": "ubuntu",
    "vpc_id": "{{user `aws_vpc_id`}}",
    "subnet_id": "{{user `aws_subnet_id`}}",
    "ami_name": "{{user `ami_name_prefix`}}-{{timestamp}}",
    "ami_regions": "{{user `aws_build_regions`}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/default.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/java.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/consul.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/elastic.sh",
      "environment_vars": [
            "ELASTIC_VERSION={{user `elastic_version`}}"
        ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type":"vagrant",
      "output": "boxes/packer_{{.BuildName}}_{{.Provider}}.box",
      "vagrantfile_template": "templates/VagrantFile.template"
    }
  ]
}
